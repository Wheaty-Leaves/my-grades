<p style="color: green"><%= notice %></p>


<div class="rounded-4 mx-auto  h-100 w-100 p-3 border border-danger border-3" style = "background-color: white">
  <h1 class = "text-primary">Courses</h1>
  <div id="courses">
    <table class=" table table-striped container table-light" style = "border-radius: 6px; overflow: hidden;">
      <thead class="thead-dark">
        <tr>
          <th class = "text-primary fs-4">Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <%= render course %>

            <td><%= button_to "Show this course", course, method: :get, :class => "btn btn-primary"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= button_to "Create Course", new_course_path,method: :get, :class => "btn btn-primary"  %>

</div>