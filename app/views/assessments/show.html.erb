<p style="color: green"><%= notice %></p>

<div class="rounded-4 mx-auto  h-100 w-100 p-3 border border-danger border-3" style = "background-color: white">
  <%= render @assessment %>



  <h1 class="text-primary">Grades</h1>

  <div id="enrolments">
    <table class=" table table-striped container table-light" style = "border-radius: 6px; overflow: hidden;">
      <thead class="thead-dark">
      <tr>
        <th class = "text-primary fs-4">Score</th>
        <th class = "text-primary fs-4">Created At</th>
        <th class = "text-primary fs-4">Graded At</th>
        <th class = "text-primary fs-4">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @grades.each do |grade| %>
        <tr>
          <%= render grade %>
          <td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div>
    <%= link_to "Edit this assessment", edit_assessment_path(@assessment) %> |
    <%= link_to "Back to assessments", course_assessments_path(@assessment.course_id) %>

    <%= button_to "Destroy this assessment", @assessment, method: :delete %>
  </div>

</div>



